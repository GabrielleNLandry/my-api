{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",       // Output to dist directory
    "rootDir": "./src",       // Source files are in src directory
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"               // Include all TypeScript files in src
  ],
  "exclude": [
    "node_modules"           // Exclude node_modules from compilation
  ]
}
